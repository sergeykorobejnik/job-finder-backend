{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "sourceMap": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "build",
    "moduleResolution": "Node",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}